---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";
import type { InferGetStaticPropsType, GetStaticPaths } from "astro";

export const getStaticPaths = (async () => {
  const docsEntries = await getCollection("docs");
  return docsEntries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}) satisfies GetStaticPaths;

export type Props = InferGetStaticPropsType<typeof getStaticPaths>;

const { entry } = Astro.props;
const { Content, headings } = await entry.render();
---

<Layout title={entry.data.title}>
  <div class="flex p-20 gap-10 relative">
    <nav class="text-lg sticky inset-0 overflow-y-scroll h-screen py-5">
      <ul>
        {
          headings.map((heading) => (
            <li>
              <a href={"#" + heading.slug}>{heading.text}</a>
            </li>
          ))
        }
      </ul>
    </nav>
    <main class="max-w-xl mx-auto prose dark:prose-invert">
      <Content />
    </main>
  </div>
</Layout>

<style is:global>
  .prose :not(pre) > code {
    @apply before:hidden after:hidden bg-violet-300 dark:bg-gray-700 rounded px-1 py-0.5;
  }
</style>
